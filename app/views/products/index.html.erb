<h1>Listing products</h1>

<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Image url</th>
    <th>Price</th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.description %></td>
    <td><%= product.image_url %></td>
    <td><%= product.price %></td>
    <td>
      <%= link_to 'Show', product, :class=>"btn btn-mini" %>
      <%= link_to 'Edit', edit_product_path(product), :class=>"btn btn-primary btn-mini" %>
      <%= link_to 'Destroy', product, method: :delete, :class=>"btn btn-danger btn-mini", data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path, :class=>"btn btn-primary btn-small" %>
