<% if notice %>
<div class="alert alert-error"><%= notice %></div>
<% end %>
<h1>Our lovely pets:</h1>
<ul class="thumbnails">
<% @products.each do |product| %>
	<li class="span4 entry">
		<div class="thumbnail">
			<img data-src="holder.js/300x200" alt="">
			<span class="label price pull-right"><%= number_to_currency(product.price) %></span>
			<h3><%= product.title %></h3>
			<p><%= product.description %></p>
			<%= button_to 'Add to Cart', line_items_path(product_id: product), :class=>"btn btn-primary pull-right", remote: true %>
			<div class="clearfix"></div>
		</div>
	</li>
<% end %>
</ul>